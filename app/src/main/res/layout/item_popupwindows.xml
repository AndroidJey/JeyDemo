<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photo_select_container_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    tools:ignore="ObsoleteLayoutParam">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/com_bg_rule_shape"
            android:orientation="vertical">

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="@color/colorPrimary" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menu_height"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/item_popup_window_camera"
                    style="@style/NormalTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_for_pressed_no_corners"
                    android:text="相机"
                    android:textColor="@color/normal_content_text_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/shape_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menu_height"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/item_popup_window_Photo"
                    style="@style/NormalTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_for_pressed_no_corners"
                    android:text="相册"
                    android:textColor="@color/normal_content_text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_popup_window_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menu_height"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shape_line"
                    tools:ignore="Suspicious0dp" />

                <Button
                    android:id="@+id/item_popup_window_Delete"
                    style="@style/NormalTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_for_pressed_no_corners"
                    android:text="@string/plugin_photo_delete"
                    android:textColor="@color/normal_content_text_color" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/item_popup_window_cancel"
            style="@style/NormalTextSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_login_selector"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>