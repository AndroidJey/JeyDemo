<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jey.jeydemo.fragment.ChatMainFragment">
    <View
        android:id="@+id/pop_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/status_bar_black_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_height"
        android:padding="10dp"
        android:background="@color/title_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="聊天记录"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pay_selector"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="退出登录"
            android:textColor="@color/title_bg"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/lvChatHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
