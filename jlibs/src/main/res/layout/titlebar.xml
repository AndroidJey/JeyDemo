<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar_container_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,ContentDescription,Deprecated,RelativeOverlap">

    <View
        android:id="@+id/pop_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/status_bar_black_bg" />

    <RelativeLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_height"
        android:background="@color/title_bg">

        <RelativeLayout
            android:id="@+id/regoback"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_menu_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="@dimen/main_menu_height">

            <ImageView
                android:id="@+id/title_GoBackButton"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:layout_centerInParent="true"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back_dark_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_RightLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_menu_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:minWidth="@dimen/main_menu_height">


            <TextView
                android:id="@+id/title_RightTextView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:minWidth="@dimen/main_menu_height"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_home_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_lessRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_menu_height"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/title_RightLayout"
            android:gravity="center"
            android:minWidth="@dimen/main_menu_height">


            <TextView
                android:id="@+id/title_lessRightTextView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:minWidth="@dimen/main_menu_height"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgLessRight"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_cart_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_menu_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/main_menu_height"
            android:layout_marginRight="@dimen/title_bar_to_right_margin"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="title" />

    </RelativeLayout>

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_below="@id/abc"-->
    <!--android:background="@color/shape_line" />-->

</LinearLayout>